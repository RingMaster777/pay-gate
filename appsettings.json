{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:localhost};Port=${DB_PORT:5432};Database=${DB_NAME:paygate};Username=${DB_USER:postgres};Password=${DB_PASSWORD}"
  },
  "Gateways": {
    "Bkash": {
      "BaseUrl": "${BKASH_BASE_URL:https://tokenized.sandbox.bka.sh/v1.2.0-beta}",
      "AppKey": "${BKASH_APP_KEY}",
      "AppSecret": "${BKASH_APP_SECRET}",
      "Username": "${BKASH_USERNAME}",
      "Password": "${BKASH_PASSWORD}"
    },
    "Stripe": {
      "SecretKey": "${STRIPE_SECRET_KEY}"
    }
  }
}
